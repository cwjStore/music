.header {
  position: relative;
  padding: 60rpx 20rpx 60rpx 30rpx;
  overflow: hidden;
}
.header .header_bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50%;
  -webkit-filter: blur(40rpx);
          filter: blur(40rpx);
  -webkit-transform: scale(1.5);
          transform: scale(1.5);
}
.header .mask {
  z-index: 10;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  opacity: .25;
  background: #000;
}
.header .header_wrap {
  position: relative;
  z-index: 100;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.header .header_wrap .wrap_fl {
  width: 252rpx;
  height: 252rpx;
  position: relative;
}
.header .header_wrap .wrap_fl image {
  width: 100%;
  height: 100%;
}
.header .header_wrap .wrap_fl .icon {
  position: absolute;
  z-index: 101;
  top: 10px;
  left: 0;
  padding: 0 8px;
  height: 17px;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  line-height: 34rpx;
  background-color: rgba(217, 48, 48, 0.8);
  border-top-right-radius: 34rpx;
  border-bottom-right-radius: 34rpx;
}
.header .header_wrap .wrap_fr {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-left: 32rpx;
}
.header .header_wrap .wrap_fr .header_name text {
  font-size: 34rpx;
}
.header .header_wrap .wrap_fr .auth {
  margin-top: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.header .header_wrap .wrap_fr .auth .auth_image {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.header .header_wrap .wrap_fr .auth text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
}

